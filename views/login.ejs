<link rel="stylesheet" href="styles/loginBasico.css">

<div class="login-container">
    <div class="login-header">
        <div class="decorative-stars">✦ ✧ ✦ ✧ ✦</div>
        <h1 class="login-title">MUNDO MASCOTA VIRTUAL</h1>
        <p class="login-subtitle">Tu refugio digital de mascotas pixeladas</p>
    </div>

    <div class="login-content">
        <!-- Formulario de Login -->
        <div class="login-form">
            <div class="pixel-corner corner-tl"></div>
            <div class="pixel-corner corner-tr"></div>
            <div class="pixel-corner corner-bl"></div>
            <div class="pixel-corner corner-br"></div>
            
            <h2 class="form-title">✧ Ingresar a tu Mundo ✧</h2>
            
            <form action="/login" method="post" class="formulario-registro">

                <div class="form-group">
                    <label for="username">★ Nombre de Usuario ★</label>
                    <input type="text" id="username" name="username" autocomplete="off" required minlength="5">
                </div>
                
                <div class="form-group">
                    <label for="password">★ Contraseña ★</label>
                    <input type="password" id="password" name="password" required minlength="8">
                </div>
                
                <button type="submit" class="login-button" id="login-button">⭐ iniciar sesion ⭐</button>
            
            </form>

                <p style="text-align: center; background-color: aliceblue; padding: 10px; border-radius: 10px; margin-top: 20px;">
                    <a href="/register"> aun no tienes cuenta? Registrate aqui</a>
                </p>


            <% if (error) { %>
                <div class="error-message">
                    <p><strong>⚠️ Error:</strong> <%= error %></p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Portal de efectos mejorado -->
    <div class="portal" id="portal"></div>

    <!-- Estrellas de fondo -->
    <div class="stars-bg" id="stars-bg"></div>
</div>
