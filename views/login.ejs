<link rel="stylesheet" href="styles/loginBasico.css">

<div class="login-container">
    <div class="login-header">
        <div class="decorative-stars">✦ ✧ ✦ ✧ ✦</div>
        <h1 class="login-title">MUNDO MASCOTA VIRTUAL</h1>
        <p class="login-subtitle">Tu refugio digital de mascotas pixeladas</p>
    </div>

    <div class="login-content">
        <!-- Formulario de Login -->
        <div class="login-form">
            <div class="pixel-corner corner-tl"></div>
            <div class="pixel-corner corner-tr"></div>
            <div class="pixel-corner corner-bl"></div>
            <div class="pixel-corner corner-br"></div>
            
            <h2 class="form-title">✧ Ingresar a tu Mundo ✧</h2>
            
            <form action="/login" method="post" class="formulario-registro">

                <div class="form-group">
                    <label for="username">★ Nombre de Usuario ★</label>
                    <input type="text" id="username" name="username" autocomplete="off" required minlength="5">
                </div>
                
                <div class="form-group">
                    <label for="password">★ Contraseña ★</label>
                    <input type="password" id="password" name="password" required minlength="8">
                </div>
                
                <button type="submit" class="login-button" id="login-button">⭐ iniciar sesion ⭐</button>
            
            </form>

            <p style="text-align: center; margin-top: 20px; background: linear-gradient(135deg, rgba(163, 4, 250, 0.2) 0%, rgba(211, 4, 197, 0.3) 100%); border: 2px solid #cf7cfc; border-radius: 8px; box-shadow: 0 0 10px rgba(211, 4, 197, 0.4), inset 0 0 5px rgba(163, 4, 250, 0.5); position: relative; overflow: hidden; transition: all 0.4s ease; animation: pulseBox 3s infinite alternate; padding: 0;">
                <a href="/register" style="display: block; padding: 15px; color: #fff; font-size: 1.2rem; text-decoration: none; letter-spacing: 1px; text-shadow: 0 0 5px #d304c5, 0 0 10px #a304fa;">✧ ¿Aún no tienes cuenta? Regístrate aquí ✧</a>
            </p>
            
            <!-- Necesitarás añadir esta animación en un bloque <style> en tu <head> -->
            <style>
            @keyframes pulseBox {
                0% { box-shadow: 0 0 10px rgba(211, 4, 197, 0.4), inset 0 0 5px rgba(163, 4, 250, 0.5); }
                100% { box-shadow: 0 0 15px rgba(211, 4, 197, 0.7), inset 0 0 8px rgba(163, 4, 250, 0.7); }
            }
            </style>

            <% if (error) { %>
                <div class="error-message">
                    <p><strong>⚠️ Error:</strong> <%= error %></p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Portal de efectos mejorado -->
    <div class="portal" id="portal"></div>

    <!-- Estrellas de fondo -->
    <div class="stars-bg" id="stars-bg"></div>
</div>
