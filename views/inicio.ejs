


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet-Chan</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="styles/inicio.css">
    <script src="scripts/inicio.js" defer></script>

</head>
<body>
    <%- include("partials/header.ejs") %>
    <main>
        <div class="contenedor-inicio">
            <div class="seccion-hero">
                <h1>Bienvenido a Pet-Chan</h1>
            </div>
            
            <div class="seccion-publicacion">
                <div class="editor-publicacion">
                    <textarea placeholder="¿Qué estás pensando?" class="entrada-publicacion"></textarea>
                    <div class="preview-imagen" id="preview-imagen"></div>
                    <div class="herramientas-publicacion">
                        <label for="subir-imagen" class="btn-herramienta" title="Subir imagen">
                            <i class="fas fa-image"></i>
                            <input type="file" id="subir-imagen" accept="image/*" style="display: none;">
                        </label>
                        <button class="btn-herramienta" title="Emojis"><i class="far fa-smile"></i></button>
                        <button class="btn-herramienta" title="Formato"><i class="fas fa-font"></i></button>
                    </div>
                </div>
                <button class="boton-publicar">Publicar</button>
            </div>
    
            <div class="comentarios-recientes">
                <h2>Comentarios Recientes</h2>
                <div class="lista-comentarios">
                    <!-- Comentarios se cargarán dinámicamente -->
                </div>
            </div>

            <div class="foros-populares">
                <h2>Foros Populares</h2>
                <div class="grid-mensajes">
                    <!-- Foros se cargarán dinámicamente -->
                </div>
            </div>
        </div>
    </main>
</body>
</html>
<%- include("partials/footer.ejs") %>
