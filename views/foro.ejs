                        <!-- Opci√≥n para todas las comunidades -->
                        <div class="filtro-item filtro-destacado">
                            <input type="radio" id="comunidad-todas" name="comunidad_id" value="" 
                                <%= (locals.filtros && (!filtros.comunidadId && !filtros.misComunidades)) ? 'checked' : '' %>>
