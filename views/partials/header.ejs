    <style>
        /* Estilos para el panel de notificaciones */
        .notificacion-panel {
            position: absolute;
            top: calc(100% + 10px);
            right: -80px;
            width: 320px;
            max-height: 400px;
            background: linear-gradient(135deg, #43314d 0%, #620296 100%);
            border-radius: 12px;
            padding: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            z-index: 1002;
            overflow-y: auto;
            visibility: hidden;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .notificacion-panel.activo {
            visibility: visible;
            opacity: 1;
            transform: translateY(0);
        }

        .notificacion-panel-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .notificacion-panel-title {
            font-size: 1em;
            color: white;
            margin: 0;
        }

        .notificacion-panel-actions {
            display: flex;
            gap: 10px;
        }

        .notificacion-panel-actions button {
            background: rgba(163, 4, 250, 0.8);
            border: none;
            color: white;
            padding: 5px 8px;
            border-radius: 4px;
            font-size: 0.7em;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .notificacion-panel-actions button:hover {
            background: #620296;
        }

        .notificacion-lista {
            display: flex;
            flex-direction: column;
            gap: 10px;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .notificacion-item {
            background: rgba(163, 4, 250, 0.6);
            border-radius: 8px;
            padding: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .notificacion-item:hover {
            background: rgba(163, 4, 250, 0.8);
            transform: translateX(5px);
        }

        .notificacion-icono {
            background: #ff3366;
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .notificacion-contenido {
            flex: 1;
        }

        .notificacion-titulo {
            font-size: 0.85em;
            color: white;
            margin: 0 0 5px 0;
        }

        .notificacion-detalles {
            display: flex;
            gap: 10px;
            font-size: 0.75em;
            color: rgba(255, 255, 255, 0.7);
        }

        .notificacion-detalle {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .notificacion-vacia {
            color: rgba(255, 255, 255, 0.7);
            text-align: center;
            padding: 20px 0;
            font-size: 0.85em;
        }

        .ver-todos-link {
            display: block;
            text-align: center;
            padding: 10px;
            color: white;
            background: rgba(163, 4, 250, 0.8);
            border-radius: 6px;
            margin-top: 10px;
            text-decoration: none;
            font-size: 0.85em;
            transition: all 0.3s ease;
        }

        .ver-todos-link:hover {
            background: #620296;
            transform: translateY(-2px);
        }
    </style>
