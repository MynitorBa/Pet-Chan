<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/css?family=Orbitron|Rajdhani:700" rel="stylesheet" />
    <style>
.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px;
    position: relative;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 1200px;
    background-color: #1a0933;
}

h2 {
    font-family: 'Press Start 2P', 'Orbitron', sans-serif;
    text-align: center;
    width: 100%;
    height: 40px;
    margin: 0 0 30px 0;
    padding: 0;
    color: white;
    font-size: 28px;
    line-height: 40px;
    text-shadow: 0 0 10px #ff00ff, 0 0 20px #ff00ff;
}

.dice-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    margin: 0;
    padding: 25px;
    width: 600px;
    height: 150px;
    border: 4px solid #ff00ff;
    border-radius: 10px;
    background-color: #3c1660;
    box-shadow: 0 0 20px #ff00ff;
    animation: neon-glow 2s infinite alternate;
}

@keyframes neon-glow {
    from { box-shadow: 0 0 5px 2px #ff00ff; }
    to { box-shadow: 0 0 15px 5px #ff00ff; }
}

.dice {
    text-align: center;
    width: 100px;
    height: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.dice p {
    margin: 0;
    padding: 5px 0;
    font-size: 0.9rem;
    color: #fff;
    height: 20px;
    line-height: 20px;
    text-shadow: 0 0 3px #ff00ff;
    text-align: center;
    width: 100%;
    font-family: 'Press Start 2P', monospace;
}

.empty-dice {
    width: 80px;
    height: 80px;
    background-color: #00d965; /* Green like w button */
    margin: 0;
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    border: 3px solid #00b050;
    flex-shrink: 0;
    box-shadow: 0 5px 0 rgba(0, 0, 0, 0.5), inset 0 0 10px rgba(255, 255, 255, 0.3);
}

.empty-dice:nth-child(2) {
    background-color: #ff4757; /* Red like a button */
    border: 3px solid #d63031;
}

.empty-dice:nth-child(3) {
    background-color: #ffd32a; /* Yellow like s button */
    border: 3px solid #d6a600;
}

.empty-dice:nth-child(4) {
    background-color: #1e90ff; /* Blue like d button */
    border: 3px solid #0073e6;
}

.empty-dice:nth-child(5) {
    background-color: #9b59b6; /* Purple like j button */
    border: 3px solid #8e44ad;
}

.empty-dice::before {
    content: '';
    position: absolute;
    top: -15px;
    left: -15px;
    width: 30px;
    height: 30px;
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(45deg);
}

img {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: block;
    flex-shrink: 0;
    border-radius: 15px;
}

.button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 30px 0 0 0;
    padding: 0;
    width: 300px;
    height: 50px;
}

#roll-button, #reset-button {
    font-family: 'Press Start 2P', 'Orbitron', sans-serif;
    font-size: 0.9rem;
    background: #fd79a8; /* Pink like k button */
    color: white;
    border: 3px solid #e84393;
    padding: 0;
    border-radius: 15px;
    cursor: pointer;
    width: 120px;
    height: 40px;
    text-transform: uppercase;
    letter-spacing: 1px;
    position: relative;
    overflow: hidden;
    text-align: center;
    line-height: 40px;
    flex-shrink: 0;
    transition: transform 0.1s, box-shadow 0.1s;
    box-shadow: 0 5px 0 rgba(0, 0, 0, 0.5), inset 0 0 10px rgba(255, 255, 255, 0.3);
    text-shadow: 2px 2px 0 #000000;
}

#reset-button {
    background-color: #00cec9; /* Cyan like l button */
    border: 3px solid #00a6a3;
}

#roll-button:hover, #reset-button:hover {
    background-color: #32054b;
    transform: translateY(-2px);
}

#roll-button:active, #reset-button:active {
    transform: translateY(5px);
    box-shadow: 0 0 0 rgba(0, 0, 0, 0.5), inset 0 0 10px rgba(255, 255, 255, 0.3);
    opacity: 0.8;
}


    </style>
  </head>
  <body>
    <div class="container">
      <h2>Refresh Me</h2>
      
      <div class="dice-container">
        <div class="dice">
          <p>Player 1</p>
          <div class="empty-dice" id="dice1"></div>
          <img class="img1" src="archivos_de_minijuegos/images/dice6.png" style="display: none;" />
        </div>
        
        <div class="dice">
          <p>Player 2</p>
          <div class="empty-dice" id="dice2"></div>
          <img class="img2" src="archivos_de_minijuegos/images/dice6.png" style="display: none;" />
        </div>
      </div>
      
      <div class="button-container">
        <button id="roll-button">Roll Dice</button>
        <button id="reset-button">Reset Game</button>
      </div>
    </div>
        
    <script>
      window.onload = function() {
          resetGame();
      };
      
      function rollDice() {
          document.getElementById("dice1").style.display = "none";
          document.getElementById("dice2").style.display = "none";
          
          document.querySelector(".img1").style.display = "block";
          document.querySelector(".img2").style.display = "block";
          
          const randomNumber1 = Math.floor(Math.random() * 6) + 1;
          const randomNumber2 = Math.floor(Math.random() * 6) + 1;
          
          const randomImage1 = "archivos_de_minijuegos/images/dice" + randomNumber1 + ".png";
          const randomImage2 = "archivos_de_minijuegos/images/dice" + randomNumber2 + ".png";
          
          document.querySelector(".img1").setAttribute("src", randomImage1);
          document.querySelector(".img2").setAttribute("src", randomImage2);
          
          if (randomNumber1 > randomNumber2) {
              document.querySelector("h2").innerHTML = "Player 1 Wins! ðŸš©";
          } else if (randomNumber2 > randomNumber1) {
              document.querySelector("h2").innerHTML = "Player 2 Wins! ðŸš©";
          } else {
              document.querySelector("h2").innerHTML = "Draw!";
          }
      }
      
      function resetGame() {
          document.getElementById("dice1").style.display = "block";
          document.getElementById("dice2").style.display = "block";
          
          document.querySelector(".img1").style.display = "none";
          document.querySelector(".img2").style.display = "none";
          
          document.querySelector("h2").innerHTML = "Refresh Me";
      }
      
      document.getElementById("roll-button").addEventListener("click", rollDice);
      document.getElementById("reset-button").addEventListener("click", resetGame);
    </script>
  </body>
</html> 