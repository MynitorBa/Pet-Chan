    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    transition: transform 0.3s ease;
  }
  
  /* Rotated arrow when collapsed */
  .toggle-arrow.rotated {
    transform: translateY(-50%) rotate(180deg);
  }
  
